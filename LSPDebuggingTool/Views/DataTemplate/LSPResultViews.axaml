<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LSPDebuggingTool.ViewModels"
             xmlns:ursa="https://irihi.tech/ursa"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LSPDebuggingTool.Views.DataTemplate.LSPResultViews"
             x:DataType="vm:RequestTaskViewModelBase">
    <UserControl.DataTemplates>
        <DataTemplate DataType="vm:DidOpenTextDocumentTVM">

        </DataTemplate>
    </UserControl.DataTemplates>
    <ursa:Banner Type="Information" Classes="Bordered" HorizontalContentAlignment="Stretch">
        <Expander IsExpanded="{Binding IsExpanded}" Content="{Binding}">
            <Expander.Header>
                <StackPanel Spacing="1">
                    <TextBlock Text="{Binding TaskName}"></TextBlock>
                    <TextBlock Text="{Binding ErrorText}"
                               IsVisible="{Binding ErrorText,Converter={x:Static StringConverters.IsNullOrEmpty},StringFormat='错误消息：{0}'}">
                    </TextBlock>
                    <ProgressBar IsVisible="False"></ProgressBar>
                </StackPanel>
            </Expander.Header>
        </Expander>
    </ursa:Banner>
</UserControl>